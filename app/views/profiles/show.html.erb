<div class="page-header">
<h1><%= @user.first_name %></h1>
</div>


    <table>
    <% if @jobbers %>
     <% @jobbers.each do |jobber| %>
     <tr>
      <div class="well">
      <address>
        <h3><%= jobber.user.first_name %> </h3>  
           <% if jobber.user.avatar.blank? %>
          <%= image_tag("http://i42.tinypic.com/ruyxqb.jpg", :size => "55x35") %>
          <% else %>
          <%= image_tag(jobber.user.avatar, :size => "55x35") %> 
          <% end %>
            | <%= jobber.organization %>   |  <abbr title="Phone"><%= jobber.category %></abbr> | <%= jobber.user.country %> | <%= country_image(jobber)  %>
            <br>
             Job Description: <%= jobber.job_description %> <br>Donation Amount:
            <%= number_to_currency(jobber.donation_amt) %>
        </address>
        <div class="meta">
         <%= link_to time_ago_in_words(jobber.created_at) + " ago", jobber %> | 
          <span class="admin">
            <%= link_to 'Edit', edit_jobber_path(jobber) %> | 

          <%= link_to 'Delete', jobber, method: :delete, data: { confirm: 'Are you sure?' } %>
          </span>
          </span>
        </div>
     </tr>
    <% end %>
  </div>
    </table> 
    <% end %>